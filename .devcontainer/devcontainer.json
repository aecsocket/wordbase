{
  "name": "wordbase",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "mounts": [
    {
      "type": "volume",
      "source": "wordbase-profile",
      "target": "/home/vscode"
    },
    {
      "type": "volume",
      "source": "nix",
      "target": "/nix"
    }
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "fill-labs.dependi",
        "vadimcn.vscode-lldb",
        "jnoortheen.nix-ide"
      ]
    }
  }
}
