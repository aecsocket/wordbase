<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0" />
  <object class="GtkAdjustment" id="dialog_opacity_idle">
    <property name="lower">0</property>
    <property name="upper">255</property>
    <property name="step_increment">1</property>
    <property name="page_increment">10</property>
  </object>
  <object class="GtkAdjustment" id="dialog_opacity_hover">
    <property name="lower">0</property>
    <property name="upper">255</property>
    <property name="step_increment">1</property>
    <property name="page_increment">10</property>
  </object>
  <object class="GtkAdjustment" id="dialog_popup_x_offset">
    <property name="lower">-100</property>
    <property name="upper">100</property>
    <property name="page-increment">10</property>
    <property name="step-increment">1</property>
  </object>
  <object class="GtkAdjustment" id="dialog_popup_y_offset">
    <property name="lower">-100</property>
    <property name="upper">100</property>
    <property name="page-increment">10</property>
    <property name="step-increment">1</property>
  </object>
  <object class="AdwPreferencesPage" id="general_page">
    <child>
      <object class="AdwPreferencesGroup">
        <property name="title" translatable="yes">Connections</property>
        <property name="description" translatable="yes">Configure what servers to connect to</property>
        <child>
          <object class="AdwEntryRow" id="wordbase_url">
            <property name="title" translatable="yes">Wordbase URL</property>
          </object>
        </child>
      </object>
    </child>

    <child>
      <object class="AdwPreferencesGroup">
        <property name="title" translatable="yes">Appearance</property>
        <property name="description" translatable="yes">Customize how the dialog box looks</property>

        <child>
          <object class="AdwPreferencesRow" id="dialog_font_row">
            <child>
              <object class="GtkBox">
                <property name="margin-top">12</property>
                <property name="margin-bottom">12</property>
                <property name="margin-start">12</property>
                <property name="margin-end">12</property>
                <property name="spacing">12</property>
                <child>
                  <object class="GtkLabel">
                    <property name="hexpand">true</property>
                    <property name="halign">start</property>
                    <property name="label" translatable="yes">Font</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="dialog_font_label">
                    <property name="label" translatable="yes">TODO</property>
                    <property name="halign">end</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="AdwPreferencesRow">
            <property name="activatable">False</property>
            <child>
              <object class="GtkBox">
                <property name="margin-top">12</property>
                <property name="margin-bottom">12</property>
                <property name="margin-start">12</property>
                <property name="margin-end">12</property>
                <property name="spacing">12</property>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Default Opacity</property>
                  </object>
                </child>
                <child>
                  <object class="GtkScale">
                    <property name="adjustment">dialog_opacity_idle</property>
                    <property name="hexpand">True</property>
                    <accessibility>
                      <property name="label" translatable="yes">Opacity</property>
                    </accessibility>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="AdwPreferencesRow">
            <property name="activatable">False</property>
            <child>
              <object class="GtkBox">
                <property name="margin-top">12</property>
                <property name="margin-bottom">12</property>
                <property name="margin-start">12</property>
                <property name="margin-end">12</property>
                <property name="spacing">12</property>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Hovered Opacity</property>
                  </object>
                </child>
                <child>
                  <object class="GtkScale">
                    <property name="adjustment">dialog_opacity_hover</property>
                    <property name="hexpand">True</property>
                    <accessibility>
                      <property name="label" translatable="yes">Opacity</property>
                    </accessibility>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="AdwSpinRow">
            <property name="title" translatable="yes">Popup X Offset</property>
            <property name="adjustment">dialog_popup_x_offset</property>
          </object>
        </child>

        <child>
          <object class="AdwSpinRow">
            <property name="title" translatable="yes">Popup Y Offset</property>
            <property name="adjustment">dialog_popup_y_offset</property>
          </object>
        </child>

      </object>
    </child>
  </object>
</interface>
