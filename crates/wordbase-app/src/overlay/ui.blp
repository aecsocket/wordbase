using Gtk 4.0;
using Adw 1;

template $Overlay: Adw.Bin {
  width-request: 180;
  height-request: 100;

  ScrolledWindow {
    hexpand: true;
    vexpand: true;

    Label sentence {
      margin-start: 16;
      margin-end: 16;
      margin-top: 16;
      margin-bottom: 16;
      halign: start;
      valign: start;
      wrap: true;
    }
  }
}
